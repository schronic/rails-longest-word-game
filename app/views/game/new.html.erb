<h1>New game</h1>

<div class="letters-cont">
<% @letters.each do |letter|%>
<div class="letter">
<%= letter %>
</div>
<% end %>
</div>
<form class="form" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="input" type="text" name="word">
  <input class="submit" type="submit" value="Commit">
  <%= hidden_field_tag :letters, @letters %>
</form>
